{
  "expo": {
    "name": "守智慧",
    "slug": "keeping-wisdom",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "keepingwisdom",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#D32F2F"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.keepingwisdom.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "We need microphone access to record audio for you. 我們需要使用麥克風來錄音。",
        "UIBackgroundModes": ["audio"]
      }
    },
    "android": {
      "package": "com.keepingwisdom.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#D32F2F"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_MICROPHONE"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-localization",
      [
        "expo-av",
        {
          "microphonePermission": "We need microphone access to record audio for you. 我們需要使用麥克風來錄音。"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "keeping-wisdom"
      }
    }
  }
}
